---
import { Icon } from 'astro-icon';
const navLinkClasses = ["btn btn--transparent nav-link", "btn btn--primary nav-link"];
const navLinks = [
  {
    name: 'Home',
    url: '/',
    style: 'transparent'
  },
  {
    name: 'Pricing',
    url: '#',
    style: 'transparent'
  },
  {
    name: 'About',
    url: '#',
    style: 'transparent'
  },
  {
    name: 'Contact',
    url: '#',
    style: 'primary'
  }
];
---

<nav>
  <div class="container nav-container">
    <Icon name="Logo" width={175} class="logo" />
    <div class="nav-wrapper">
      <button class="btn btn--menu" id="menu-btn" aria-expanded="false" aria-label="Open mobile nav"><Icon name="feather:menu" width={25} class="hamburger" /></button>
      
      <!-- <Icon name="mdi:account" width={35} /> -->
      <ul class="nav-links" role="navigation">
        {
          navLinks.map(link => (
            <li role="none">
              <a href={link.url} class={link.name === "Contact" ? "btn btn--primary nav-link" : "btn btn--transparent nav-link"}>{link.name}</a>  
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>

<script>
  const navBtn = document.querySelector('#menu-btn');
  navBtn.addEventListener('click', () => {
    navBtn.setAttribute('aria-expanded', navBtn.getAttribute('aria-expanded') === 'false' ? 'true' : 'false');
  })
</script>